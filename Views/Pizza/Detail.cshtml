@model Pizza;


@if (Model == null)
{
    <h3 class="text-center">il risultato non è stato trovato.</h3>
} else{

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center">
                    <h1 class="mt-3 mb-3">@Model.Name</h1>
                </div>
                <div class="post-single-image-container">
                    <img src="@Model.Image">
                </div>
         
                <p>
                    <strong>Ingredienti:</strong>
                    @Model.Description
                </p>
                <p>
                    <strong>Prezzo:</strong>
                    @Model.Price
                </p>
            </div>
        </div>
    </div>

}

